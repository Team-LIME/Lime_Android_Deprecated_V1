<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>

        <variable
            name="eventObserver"
            type="kr.hs.dgsw.avocatalk.eventobserver.dialog.MessageEventObserver" />

        <variable
            name="globalValue"
            type="kr.hs.dgsw.avocatalk.data.widget.GlobalValue" />

        <variable
            name="title"
            type="String" />

        <variable
            name="message"
            type="String" />
        <variable
            name="isShowHelpBtn"
            type="Boolean" />
        <variable
            name="btnText"
            type="String" />
        <variable
            name="helpBtnText"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".view.dialog.MessageDialog">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dialog"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20pt"
                android:layout_marginTop="20pt"
                android:layout_marginRight="20pt"
                android:layout_marginBottom="10pt"
                android:fontFamily="@font/default_font_bold"
                android:text="@{title}"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="회원가입이 완료되었습니다." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10pt"
                android:layout_marginRight="10pt"
                android:layout_marginBottom="13pt"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/default_font_light"
                    android:lineSpacingExtra="5sp"
                    android:text="@{message}"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="14sp"
                    tools:text="이메일로 전송된 URL을 통한 이메일 인증 후,\n정상적인 서비스 이용이 가능합니다." />

            </LinearLayout>

            <TextView
                android:id="@+id/help_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/default_font_light"
                android:onClick="@{() -> eventObserver.onClickHelpBtn()}"
                android:text="@{helpBtnText}"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="@{isShowHelpBtn? View.VISIBLE:View.GONE}"
                tools:text="URL이 만료되었나요?"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/next_btn2"
                android:layout_width="match_parent"
                android:layout_height="25pt"
                android:layout_gravity="bottom"
                android:background="@drawable/background_dialog_btn"
                android:fontFamily="@font/default_font_bold"
                android:gravity="center"
                android:onClick="@{() -> eventObserver.onClickOkBtn()}"
                android:text="@{btnText}"
                android:textColor="@color/btnTextColor"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="@string/btn_ok" />

        </LinearLayout>


        <androidx.core.widget.ContentLoadingProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{globalValue.isLoading ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
